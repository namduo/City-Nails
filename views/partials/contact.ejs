<section id="contact">
<div class="container">
   <div class="row">
      <div class="col-lg-8 mx-auto text-center">
      <h2 class="section-heading">Make a Booking</h2>
      <hr class="my-4">
      <p class="mb-5">If you'd like to make an appointment, send us a message, telephone or feel free to come in and talk to us in person.</p>
      </div>
   </div>

	<div class="row">
		<div class="col-lg-8 mx-auto text-center">

			<form id="contact-form">

				<div class="md-form">
					<input type="text" id="name-field" name="name" class="form-control">
					<label for="name">Your name</label>
				</div>

				<div class="md-form">
					<input type="tel" id="phone-field" name="phone" class="form-control">
					<label for="phone">Your telephone number</label>
				</div>

				<div class="md-form">
					<input type="email" id="email-field" name="email" class="form-control">
					<label for="email">Your email</label>
				</div>

				<div class="md-form">
					<textarea id="message-field" class="md-textarea" name="message" style="height: 100px"></textarea>
					<label for="message">Your message</label>
				</div>

				<div class="text-center">
					<p id="form-message"></p>
					<button class="btn btn-unique" type="submit" >Send &rarr;</button>
				</div>
			</form>

		</div>

	</div>
   



</div>
</section>